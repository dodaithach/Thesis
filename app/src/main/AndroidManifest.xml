<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="k2013.fit.hcmus.thesis.id539621">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.HowToActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GamePlayActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".activity.GameSelectionActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".dialog.DialogGameSuccess"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Transparent"/>
        <activity android:name=".dialog.DialogGameFailed"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Transparent"/>
        <activity android:name=".dialog.DialogGamePause"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Transparent"/>
        <activity android:name=".dialog.DialogPregame"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Pregame"/>
    </application>

</manifest>