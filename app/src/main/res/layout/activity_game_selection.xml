<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="k2013.fit.hcmus.thesis.id539621.activity.GameSelectionActivity"
    android:background="@color/themePrimary"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gameselection_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/rounded_background"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

        <ImageButton
            android:id="@+id/gameselection_btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:padding="0dp"
            android:src="@drawable/btn_back"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="gameSelectionOnClick"
            android:stateListAnimator="@null" />

    </LinearLayout>

</RelativeLayout>
