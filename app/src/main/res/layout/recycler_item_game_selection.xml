<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/gameselection_recycleritem_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="56sp"
                    android:textColor="@color/themePrimary"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textColor="@color/themePrimary"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time (s) "
                    android:textColor="@color/themeBlack"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/gameselection_recycleritem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textAlignment="textStart"
                    android:textColor="@color/themePrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background Sound "
                    android:textColor="@color/themeBlack"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/gameselection_recycleritem_backgroundsound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textAlignment="textStart"
                    android:textColor="@color/themePrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distracting Sound "
                    android:textColor="@color/themeBlack"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/gameselection_recycleritem_distractingsound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textAlignment="textStart"
                    android:textColor="@color/themePrimary"/>

            </LinearLayout>

            <Button
                android:id="@+id/gameselection_recycleritem_btn"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btn_play_recycleritem_gameselection"
                android:text="Play"
                android:textAllCaps="false"
                android:textColor="@drawable/text_play_recycleritem_gameselection"
                android:stateListAnimator="@null"/>

        </LinearLayout>

        <View
            android:id="@+id/gameselection_recycleritem_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:background="@color/themeDarkGrey" />

    </LinearLayout>

</RelativeLayout>