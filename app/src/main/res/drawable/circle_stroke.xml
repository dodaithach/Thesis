<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke android:color="@color/colorCircleStroke"
                android:width="1dp"/>
            <solid android:color="@color/colorCircleSolidDark"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <stroke android:color="@color/colorCircleStroke"
                android:width="1dp"/>
            <solid android:color="@color/colorCircleSolidLight"/>
        </shape>
    </item>
</selector>